{
    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../ansible/bambichecker.yml",
            "host_alias": "packer-checker"
        }
    ],
    "builders": [
        {
            "type": "hcloud",
            "image": "ubuntu-20.04",
            "location": "fsn1",
            "server_type": "cpx11",
            "ssh_username": "root",
            "snapshot_name": "bambichecker-{{timestamp}}",
            "snapshot_labels": {
                "type": "bambichecker"
            }
        }
    ]
}
